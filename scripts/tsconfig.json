{
    "compilerOptions": {
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "module": "ESNext",
        "lib": [
            "es2019",
            "DOM",
            "DOM.Iterable"
        ],
        "target": "ES2016",
        "esModuleInterop": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "strict": true
        // TODO: Добавить
        // "noUncheckedIndexedAccess": true
    },
    "include": [
        "src"
    ]
}